<html>
  <head>
    <title>Trintech Kanban</title>
    <!-- Library Styles -->
    <style><%- libraryStyles %></style>

    <!-- Your Styles Here-->
    <style>
      * {
        box-sizing: border-box;
      }
      
      body {
        font-family: helvetica, arial, sans-serif;
        margin: 0;
      }

      html, body {
        max-width: 100%;
        overflow-x: hidden;
      }

      pre {
        white-space: pre-wrap;
      }
      
      .kanban-anchor {
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div class="kanban-anchor"></div>
    <script>
      <%- libraryScript %>
      <%- initializeState %>;
    </script>

    <!-- Your Code Here -->
    <script>
      const kanbanRoot = document.querySelectorAll('.kanban-anchor')[0];

      // You could also ajax the initialState in, but it would be more
      //  seamless to just render it here on the server in the first place
      const initialState = window.initialState;
      window.trintechKanban(kanbanRoot, window.initialState);
    </script>
  </body>
</html>